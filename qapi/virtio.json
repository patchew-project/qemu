#               "transport": [],
#               "type": "virtio-crypto",
#               "features": []
#          },
#          "start-on-kick": false,
#          "isr": 1,
#          "broken": false,
#          "status": {
#               "dev-status": ["acknowledge", "driver", "features-ok",
#                              "driver-ok"]
#          },
#          "num-vqs": 2,
#          "guest-features": {
#               "transport": ["event-idx", "indirect-desc", "version-1"],
#               "type": "virtio-crypto",
#               "features": []
