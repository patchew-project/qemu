#!/bin/sh

hxtoh()
{
    in_rst=0
    while read -r str; do
        case $str in
            HXCOMM*)
            ;;
            SRST*)
              if [ $in_rst -eq 1 ]
              then
                echo "Error: SRST inside another RST" >&2
                exit 1
              fi
              in_rst=1
            ;;
            ERST*)
              if [ $in_rst -eq 0 ]
              then
                echo "Error: ERST already outside RST" >&2
                exit 1
              fi
              in_rst=0
            ;;
            *)
            test $in_rst -eq 0 && printf "%s\n" "$str"
            ;;
        esac
    done
}

case "$1" in
"-h") hxtoh ;;
*) exit 1 ;;
esac < "$2"

exit 0
